<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<HBox alignment="CENTER"
      prefHeight="38.0"
      prefWidth="900.0"
      spacing="8.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.speedment.tool.core.internal.controller.ToolbarController">
    
    <children>
        <Button fx:id="buttonReload" alignment="CENTER" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Reload" textAlignment="CENTER">
            <padding>
                <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
            </padding>
        </Button>
        <Button fx:id="buttonGenerate" alignment="CENTER" graphicTextGap="10.0" layoutX="50.0" layoutY="10.0" mnemonicParsing="false" text="Generate" textAlignment="CENTER">
            <padding>
                <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
            </padding>
        </Button>
        <Pane prefHeight="200.0" HBox.hgrow="ALWAYS" />
        <ImageView fx:id="brand" fitHeight="48.0" preserveRatio="true" smooth="true" >
            <HBox.margin>
                <Insets right="8.0" />
            </HBox.margin>
        </ImageView>
    </children>
    <padding>
        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
    </padding>
</HBox>
